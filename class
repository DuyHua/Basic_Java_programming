import java.util.ArrayList;

public class NhanVien {
	String name;
	String idCode;
	String hireDate;
	int salary;
	private static NhanVien nv1;

	NhanVien(String idCode, String name, String hireDate, int salary) {
		this.name = name;
		this.idCode = idCode;
		this.hireDate = hireDate;
		this.salary = salary;
	}

	void display() {
		System.out.println("Ma: " + idCode);
		System.out.println("Ten: " + name);
		System.out.println("Ngay vao lam: " + hireDate);
		System.out.println("Luong: " + salary);
	}

	public static void main(String[] args) {
		arrayList nv1 = new NhanVien("1","Hua Truong Duy", "21/07/2015", 50000);
		nv1.display();

	}

}

