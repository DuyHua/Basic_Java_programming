public class SinhVien {
	String name;
	int age;
	double mathScore;
	double writingScore;
	private static SinhVien sv1;

	public SinhVien(String name, int age, double mathScore, double writingScore) {
		this.name = name;
		this.age = age;
		this.mathScore = mathScore;
		this.writingScore = writingScore;
	}

	void display() {
		System.out.println("Ho va ten: " + name);
		System.out.println("Tuoi: " + age);
		System.out.println("Diem Toan: " + mathScore);
		System.out.println("Diem Van: " + writingScore);
	}

	void setScore(double mathScore, double writingScore) {
		this.mathScore = mathScore;
		this.writingScore = writingScore;
	}

	void averageScore() {
		double a = (mathScore + writingScore) / 2;
		System.out.println("Diem Trung Binh :" + a);
	}

	public static void main(String[] args) {
		sv1 = new SinhVien("Hua Truong Duy", 27, 5.6, 6);
		sv1.display();
		sv1.setScore(1.5, 3);
		sv1.display();
		sv1.averageScore();
	}

}




